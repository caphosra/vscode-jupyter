{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": ["es6", "WebWorker"],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "noImplicitThis": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode test",
        "src/test",
        "build",
        "src/*.node.ts",
        "src/**/*.node.ts"
    ]
}
